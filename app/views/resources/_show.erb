
<div class="resource">
  <h4>
    <%= link_to resource.title, resource.url, :target => "_blank" %>
  </h4>
  <p><%= resource.description %></p>
  <% if logged_in? %>
    <%= link_to 'Edit', edit_resource_path(resource) %>
    <%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>




